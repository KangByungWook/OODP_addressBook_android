<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="oodp.android_sample_1"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="16" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PeopleActivity"
            android:label="@string/title_activity_people"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="oodp.android_sample_1.MainActivity" />
        </activity>
        <activity
            android:name=".NewPeopleActivity"
            android:label="@string/title_activity_new_people"
            android:parentActivityName=".PeopleActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="PeopleActivity" />
        </activity>
        <activity
            android:name=".SmsActivity"
            android:label="@string/title_activity_sms"
            android:parentActivityName=".MainActivity" >
        </activity>
        <activity
            android:name=".NewSmsActivity"
            android:label="@string/title_activity_new_sms"
            android:parentActivityName=".SmsActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="oodp.android_sample_1.SmsActivity" />
        </activity>
        <activity
            android:name=".CallActivity"
            android:label="@string/title_activity_call"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="oodp.android_sample_1.MainActivity" />
        </activity>
        <activity
            android:name=".NewCallActivity"
            android:label="@string/title_activity_new_call"
            android:parentActivityName=".CallActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="oodp.android_sample_1.CallActivity" />
        </activity>
    </application>

</manifest>
