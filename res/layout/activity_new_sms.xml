<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="oodp.android_sample_1.NewSmsActivity" >

    <TextView
        android:id="@+id/tv_massage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tb_receiver"
        android:layout_below="@+id/tb_receiver"
        android:layout_marginTop="38dp"
        android:text="message" />

    <Button
        android:id="@+id/bt_do_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_massage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="117dp"
        android:onClick="bt_do_send_Click"
        android:text="메세지 전송" />

    <TextView
        android:id="@+id/tv_receiver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="60dp"
        android:layout_toLeftOf="@+id/bt_do_send"
        android:text="number" />

    <EditText
        android:id="@+id/tb_receiver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_receiver"
        android:layout_centerHorizontal="true"
        android:ems="10" />

    <EditText
        android:id="@+id/tb_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_massage"
        android:layout_below="@+id/tv_massage"
        android:ems="10"
        android:inputType="textMultiLine|textLongMessage" />

</RelativeLayout>