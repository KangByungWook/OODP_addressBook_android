<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="oodp.android_sample_1.NewPeopleActivity" >

    <Button
        android:id="@+id/bt_accept"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:onClick="bt_accept_Click"
        android:text="Accept" />

    <TextView
        android:id="@+id/TextView02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tb_group"
        android:layout_alignLeft="@+id/tb_group"
        android:layout_marginBottom="38dp"
        android:text="Group" />

    <EditText
        android:id="@+id/tb_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bt_accept"
        android:layout_alignLeft="@+id/tb_receiver"
        android:layout_marginBottom="74dp"
        android:ems="10" />

    <EditText
        android:id="@+id/tb_receiver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/TextView02"
        android:layout_alignLeft="@+id/tv_massage"
        android:layout_marginBottom="32dp"
        android:ems="10" />

    <EditText
        android:id="@+id/tb_massage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_massage"
        android:layout_alignLeft="@+id/tv_massage"
        android:layout_marginBottom="27dp"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/tv_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tb_massage"
        android:layout_alignLeft="@+id/tv_receiver"
        android:text="Number" />

    <TextView
        android:id="@+id/tv_massage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tb_receiver"
        android:layout_alignLeft="@+id/tv_number"
        android:text="Email" />

    <EditText
        android:id="@+id/tb_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_number"
        android:layout_alignLeft="@+id/tv_number"
        android:layout_marginBottom="14dp"
        android:ems="10" />

    <TextView
        android:id="@+id/tv_receiver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tb_name"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="17dp"
        android:text="Name:" />

</RelativeLayout>